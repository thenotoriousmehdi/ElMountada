<?php

class UserModel {
    private $db;

    public function __construct($db)
    {
        $this->db = $db;
    }

    public function getUserByEmail($email)
    {
        $query = $this->db->prepare("SELECT * FROM users WHERE email = :email LIMIT 1");
        $query->execute(['email' => $email]);
        return $query->fetch(PDO::FETCH_ASSOC);
    }

   
}
